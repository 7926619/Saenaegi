<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/part_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/part_num"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/part_button"
        android:layout_alignLeft="@id/part_button"
        android:layout_alignRight="@id/part_button"
        android:layout_alignTop="@id/part_button"
        android:gravity="center"
        android:text="1"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="30sp"/>

</RelativeLayout>