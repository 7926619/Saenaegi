<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".aLfreeMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFF">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:textSize="25sp"
                android:textColor="#363636"
                android:textStyle="bold"
                android:contentDescription="영상 시청"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/textView18"
                android:nextFocusUp="@+id/back"
                android:text="영상 시청" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="#d5d5d5" />

        </RelativeLayout>

        <view
            android:id="@+id/youtube_screen"
            class="com.google.android.youtube.player.YouTubePlayerView"
            id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="110dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="[ 영상 제목 ]"
                android:textColor="#363636"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/textView22"
                android:nextFocusUp="@+id/back"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#363636"
                    android:contentDescription="재생"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusRight="@+id/textView22"
                    android:nextFocusUp="@+id/textView18"
                    android:text="재생" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#363636"
                    android:contentDescription="정지"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusRight="@+id/textView21"
                    android:nextFocusLeft="@+id/textView22"
                    android:text="정지" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#363636"
                    android:contentDescription="10초 앞으로"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusRight="@+id/textView20"
                    android:nextFocusLeft="@+id/textView19"
                    android:text=" 10초 앞으로" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#363636"
                    android:contentDescription="10초 뒤로"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@+id/textView16"
                    android:nextFocusLeft="@+id/textView21"
                    android:text=" 10초 뒤로" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="#363636"
                android:contentDescription="파트 선택"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/textView15"
                android:nextFocusUp="@+id/textView20"
                android:text="파트 선택" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="#363636"
                android:contentDescription="추천하기"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/back"
                android:nextFocusUp="@+id/textView16"
                android:text="추천하기" />

            <TextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="#363636"
                android:contentDescription="뒤로가기"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/textView18"
                android:nextFocusUp="@+id/textView15"
                android:text="뒤로가기" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/gesture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8e8e8e"
            android:gravity="center"
            android:text="제스처"
            android:textColor="#fff"
            android:textSize="100sp" />

    </RelativeLayout>

</LinearLayout>