<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".aLfreeMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFF">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:textSize="25sp"
                android:textColor="#363636"
                android:textStyle="bold"
                android:contentDescription="설정"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/textView18"
                android:nextFocusUp="@+id/textView15"
                android:accessibilityTraversalAfter="@+id/textView18"
                android:accessibilityTraversalBefore="@+id/textView15"
                android:text="설정" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="#d5d5d5" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="#363636"
                android:contentDescription="Push 알림 설정"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/textView17"
                android:nextFocusUp="@+id/textView15"
                android:accessibilityTraversalAfter="@+id/textView17"
                android:accessibilityTraversalBefore="@+id/textView15"
                android:text="Push 알림 설정" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="#363636"
                android:contentDescription="앱 소개"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/textView16"
                android:nextFocusUp="@+id/textView18"
                android:accessibilityTraversalAfter="@+id/textView16"
                android:accessibilityTraversalBefore="@+id/textView18"
                android:text="앱 소개" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="#363636"
                android:contentDescription="@string/versionText"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/textView15"
                android:nextFocusUp="@+id/textView17"
                android:accessibilityTraversalAfter="@+id/textView15"
                android:accessibilityTraversalBefore="@+id/textView17"
                android:text="@string/versionText" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="#363636"
                android:contentDescription="오픈소스 라이선스"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/textView18"
                android:nextFocusUp="@+id/textView16"
                android:accessibilityTraversalAfter="@+id/textView18"
                android:accessibilityTraversalBefore="@+id/textView16"
                android:text="오픈소스 라이선스" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/gesture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8e8e8e"
            android:gravity="center"
            android:text="제스처"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:importantForAccessibility="no"
            android:textColor="#fff"
            android:textSize="100sp" />

    </RelativeLayout>

</LinearLayout>